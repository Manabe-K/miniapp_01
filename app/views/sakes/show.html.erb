<div class="max-w-4xl mx-auto p-6 bg-white shadow-2xl rounded-lg" style="margin-top: 150px; margin-bottom: 100px;">
  <h1 class="text-3xl font-semibold text-center text-gray-800 mb-8"><%= @sake.name %></h1>

  <div class="space-y-6">
    <!-- 酒の種類の表示 -->
    <div class="flex justify-between items-center border-b-2 pb-4">
      <p class="text-lg font-medium text-gray-700"><strong>酒の種類:</strong> <%= @sake.type_of_sake.capitalize %></p>
    </div>
    
    <!-- 酒度の表示 -->
    <div class="flex justify-between items-center border-b-2 pb-4">
      <p class="text-lg font-medium text-gray-700">
        <strong>酒度:</strong> 
        <%= @sake.sake_meter_value >= 0 ? "+#{@sake.sake_meter_value}" : @sake.sake_meter_value %>
      </p>
    </div>

    <!-- 価格の表示 -->
    <div class="flex justify-between items-center border-b-2 pb-4">
      <p class="text-lg font-medium text-gray-700"><strong>価格:</strong> <%= number_to_currency(@sake.price) %></p>
    </div>

    <!-- 都道府県の表示 -->
    <div class="flex justify-between items-center border-b-2 pb-4">
      <p class="text-lg font-medium text-gray-700"><strong>都道府県:</strong> <%= @sake.prefecture %></p>
    </div>

    <!-- ラベル画像の表示 -->
    <div class="flex justify-center mt-4">
      <%= image_tag @sake.label_image.present? ? @sake.label_image.url : 'label_placeholder.png', class: "rounded-lg shadow-xl border-2 border-gray-300" %>
    </div>
  </div>

  <div class="mt-8 text-center">
    <%= link_to '一覧に戻る', sakes_path, class: 'w-full sm:w-auto py-3 px-6 text-lg font-semibold text-white bg-yellow-800 rounded-lg hover:bg-yellow-900 focus:outline-none focus:ring-4 focus:ring-yellow-900 transition duration-300 transform hover:scale-105' %>
  </div>
</div>