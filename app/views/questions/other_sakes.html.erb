<div class="max-w-7xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-20 mb-16" style="margin-top: 150px;">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
    該当する日本酒一覧
  </h1>

  <% if @other_sakes.any? %>
    <%= render 'shared/sakes_table', sakes: @other_sakes %>
  <% else %>
    <div class="text-center text-xl font-semibold text-gray-700 py-6">
      該当する日本酒は見つかりませんでした。
    </div>
  <% end %>
  <%= paginate @other_sakes %>
</div>