<div class="overflow-x-auto">
  <table class="min-w-full table-auto">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">名前</th>
        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">酒度</th>
        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">価格</th>
        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">都道府県</th>
        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">詳細</th>
      </tr>
    </thead>
    <tbody class="text-sm">
      <% sakes.each do |sake| %>
        <tr class="border-b border-gray-200 hover:bg-gray-50">
          <td class="px-4 py-2"><%= sake.name %></td>
          <td class="px-4 py-2"><%= sake.sake_meter_value %></td>
          <td class="px-4 py-2"><%= sake.price %></td>
          <td class="px-4 py-2"><%= sake.prefecture.capitalize %></td>
          <td class="px-4 py-2"><%= link_to '詳細', sake_path(sake), class: "text-blue-500 hover:text-blue-700 font-semibold" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>